{% extends "layout.njk" %}

{% block content %}
<div class="container">
	<div class="page-card">
		<div class="card-header">
			<h3><i class="icon-info"></i>معلومات الحساب</h3>
		</div>
		<div class="card-content">
			<div class="profile-avatar">
				<div class="avatar-edit">
				<img src="assets/images/profile-avatar.png" alt="">
				<button class="btn btn-upload"><i class="icon-plus"></i></button>
			</div>
				
			</div>

			<form method="POST" class="profile-form">

				<div class="form-group form-row">
					<label for="name">الإسم</label> 
					<input type="text" class="form-control">
				</div>
				<div class="form-group form-row">
					<label for="name">رقم الهاتف</label> 
					<input type="text" class="form-control">
				</div>
				<div class="form-group form-row">
					<label for="name">البريد الالكتروني</label> 
					<input type="text" class="form-control">
				</div>
				<div class="form-group form-row">
					<label for="name">الجنس</label> 
					<input type="text" class="form-control">
				</div>
				<div class="form-group form-row">
					<label for="name">تاريخ الميلاد</label> 
					<input type="text" class="form-control">
				</div>
				
			
				
			
			
	
			
				<!-- <button type="submit" class="btn btn-main ">Send</button> -->
				<button type="submit" class="btn btn-main">حفظ</button>
